@model Student_storproc.Models.Student
@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-info text-center">Edit Student</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group">
                            <label class="label" asp-for="Name"></label>
                            <input type="text" class="form-control" placeholder="Provide Name" asp-for="Name" />
                            <label hidden class="label" asp-for="Name"></label>
                            <input hidden type="text" class="form-control" placeholder="Provide Name" asp-for="Name" />
                        </div>
                        <div class="form-group">
                            <label class="label" asp-for="Address"></label>
                            <input type="text" class="form-control" placeholder="Enter Address" asp-for="Address" />
                        </div>
                        <div class="form-group">
                            <label class="label" asp-for="RollNo"></label>
                            <input type="text" class="form-control" placeholder="Enter RollNO" asp-for="RollNo" />
                        </div>
                        <div class="form-group">
                            <label class="label" asp-for="Subject"></label>
                            <input type="text" class="form-control" placeholder="Enter Subject Name" asp-for="Subject" />
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>