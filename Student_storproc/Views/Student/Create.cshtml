@model Student_storproc.Models.Student
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-info text-center">Add Student</h1>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly"></div>
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label class="label" asp-for="Name"></label>
                            <input type="text" class="form-control" placeholder="Provide Name"asp-for="Name" />
                            <span class="text-danger" asp-validation-for="Name"></span>

                        </div>
                        <div class="form-group">
                            <label class="label" asp-for="Address"></label>
                            <input type="text" class="form-control" placeholder="Enter Address" asp-for="Address" />
                            <span class="text-danger" asp-validation-for="Address"></span>
                        </div>
                        <div class="form-group">
                            <label class="label" asp-for="RollNo"></label>
                            <input type="text" class="form-control" placeholder="Enter RollNO"asp-for="RollNo" />
                            <span class="text-danger" asp-validation-for="RollNo"></span>
                        </div>
                        <div class="form-group">
                            <label class="label" asp-for="Subject"></label>
                            <input type="text" class="form-control" placeholder="Enter Subject Name" asp-for="Subject" />
                            <span class="text-danger" asp-validation-for="Subject"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary"/>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
